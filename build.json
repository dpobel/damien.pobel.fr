{
    "source": "src",
    "destination": "web",
    "baseUri": "http://damien.pobel.fr",
    "collections": {
        "posts": {
            "pattern": "post/*",
            "sortBy": "published",
            "reverse": true
        },
        "lastPosts": {
            "pattern": "post/*",
            "sortBy": "published",
            "reverse": true,
            "limit": 10,
            "refer": false
        },
        "pages": {
            "pattern": "page/*",
            "sortBy": "published",
            "reverse": true
        }
    },
    "pagination": {
        "collections.posts": {
            "perPage": 5,
            "layout": "blog.html",
            "first": "posts.md",
            "noPageOne": true,
            "path": "posts/:num/index.html"
        },
        "collections.pages": {
            "perPage": 5,
            "layout": "pages.html",
            "first": "pages.md",
            "noPageOne": true,
            "path": "pages/:num/index.html"
        }
    },
    "permalinks": {
        "relative": false
    },
    "layouts": {
        "engine": "nunjucks",
        "directory": "templates",
        "default": "default.html"
    }
}
