{
    "source": "src",
    "destination": "web",
    "define": {
        "site": {
            "url": "http://damien.pobel.fr"
        }
    },
    "fileMetadata": [{
        "pattern": "post/*.md",
        "metadata": {
            "layout": "post.html"
        }
    }, {
        "pattern": "page/*.md",
        "metadata": {
            "layout": "page.html"
        }
    }, {
        "pattern": "index.md",
        "metadata": {
            "layout": "home.html"
        }
    }],
    "moment": ["published", "updated"],
    "tags": {
        "handle": "tags",
        "path": "tag/:tag.html",
        "layout": "tag.html",
        "sortBy": "published",
        "reverse": true,
        "skipMetadata": false,
        "metadataKey": "tagsList",
        "perPage": 5,
        "pathPage": "tag/:tag/:num.html"
    },
    "collections": {
        "posts": {
            "pattern": "post/*",
            "sortBy": "published",
            "reverse": true
        },
        "lastPosts": {
            "pattern": "post/*",
            "sortBy": "published",
            "reverse": true,
            "limit": 10,
            "refer": false
        },
        "pages": {
            "pattern": "page/*",
            "sortBy": "published",
            "reverse": true
        }
    },
    "pagination": {
        "collections.posts": {
            "perPage": 5,
            "layout": "blog.html",
            "first": "posts.md",
            "noPageOne": true,
            "path": "posts/:num/index.html"
        },
        "collections.pages": {
            "perPage": 5,
            "layout": "pages.html",
            "first": "pages.md",
            "noPageOne": true,
            "path": "pages/:num/index.html"
        }
    },
    "permalinks": {
        "relative": false
    },
    "layouts": {
        "engine": "nunjucks",
        "directory": "templates"
    },
    "feed": {
        "collection": "posts",
        "limit": 10,
        "destination": "rss.xml",
        "title": "Derniers posts",
        "description": "Damien Pobel / Blog"
    }
}
