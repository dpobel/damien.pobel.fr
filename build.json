{
    "source": "src",
    "destination": "web",
    "define": {
        "site": {
            "url": "http://damien.pobel.fr",
            "name": "Damien Pobel",
            "baseline": "Curious geek and (sometimes grumpy) software engineer ;-)"
        },
        "menu": [
            {"path": "posts", "name": "blog"},
            {"path": "page/cv", "name": "cv"},
            {"path": "page/about", "name": "Ã  propos"}
        ],
        "sections": {
            "blog": {
                "name": "blog",
                "path": "posts"
            },
            "pages": {
                "name": "pages",
                "path": "pages"
            }
        }
    },
    "ignore": [
        "ext/*"
    ],
    "assets": {
        "source": "./assets",
        "destination": "."
    },
    "myth": {
        "files": "style.css",
        "compress": true
    },
    "fileMetadata": [{
        "pattern": "posts{.md,/*.html}",
        "metadata": {
            "section": "blog",
            "type": "list"
        }
    }, {
        "pattern": "pages{.md,/*.html}",
        "metadata": {
            "section": "pages",
            "type": "list"
        }
    }, {
        "pattern": "post/*.md",
        "metadata": {
            "layout": "post.html",
            "section": "blog",
            "type": "post"
        }
    }, {
        "pattern": "page/*",
        "metadata": {
            "layout": "page.html",
            "section": "pages",
            "type": "page"
        }
    }, {
        "pattern": "index.md",
        "metadata": {
            "layout": "home.html",
            "type": "home"
        }
    }],
    "moment": ["published", "updated"],
    "tags": {
        "handle": "tags",
        "path": "tag/:tag.html",
        "layout": "tag.html",
        "sortBy": "published",
        "reverse": true,
        "skipMetadata": false,
        "metadataKey": "tagsList",
        "perPage": 5,
        "pathPage": "tag/:tag/:num.html"
    },
    "collections": {
        "posts": {
            "pattern": "post/*",
            "sortBy": "published",
            "reverse": true
        },
        "lastPosts": {
            "pattern": "post/*",
            "sortBy": "published",
            "reverse": true,
            "limit": 10,
            "refer": false
        },
        "pages": {
            "pattern": "page/*",
            "sortBy": "updated",
            "reverse": true,
            "refer": false
        }
    },
    "pagination": {
        "collections.posts": {
            "perPage": 5,
            "layout": "blog.html",
            "first": "posts.md",
            "noPageOne": true,
            "path": "posts/:num.html"
        },
        "collections.pages": {
            "perPage": 10,
            "layout": "pages.html",
            "first": "pages.md",
            "noPageOne": true,
            "path": "pages/:num.html"
        }
    },
    "permalinks": {
        "relative": false
    },
    "layouts": {
        "engine": "nunjucks",
        "directory": "templates"
    },
    "feed": {
        "collection": "posts",
        "limit": 10,
        "destination": "rss.xml",
        "title": "Derniers posts",
        "description": "Damien Pobel / Blog"
    },
    "imageVariation": {
        "concurrency": 2
    }
}
